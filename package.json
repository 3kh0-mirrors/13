{
  "name": "@eliasku/js13k-2022",
  "version": "1.0.1",
  "description": "js13k game with p2p realtime multiplayer",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "start-watch": "npx nodemon ./server.js",
    "build-ts-server": "tsc -p server/tsconfig.json",
    "build-ts-client": "tsc -p tsconfig.json",
    "build": "ts-node --esm --swc tools/build.ts",
    "client-watch-dev": "esbuild src/lib/index.ts --watch --bundle --minify --mangle-props=._$ --define:process.env.NODE_ENV='\"development\"' --define:__VERSION__='\"1.0.0\"' --format=esm --sourcemap --outfile=public/client.js",
    "client-watch": "esbuild src/lib/index.ts --watch --bundle --minify --mangle-props=._$ --define:process.env.NODE_ENV='\"production\"' --define:__VERSION__='\"1.0.0\"' --format=esm --sourcemap --outfile=public/client.js",
    "debug-watch": "esbuild src/lib/index.ts --tsconfig=tsconfig.json --watch --bundle --define:process.env.NODE_ENV='\"development\"' --define:__VERSION__='\"1.0.0\"' --format=esm --sourcemap --outfile=public/debug.js",
    "typecheck": "tsc -p tsconfig.json --watch --noEmit",
    "server-watch": "esbuild server/src/index.ts --watch --bundle --minify --mangle-props=._$ --define:process.env.NODE_ENV='\"development\"' --define:__VERSION__='\"1.0.0\"' --platform=node --target=node16 --format=esm --outfile=server.js"
  },
  "author": "eliasku",
  "license": "ISC",
  "devDependencies": {
    "typescript": "^4.8.2",
    "@types/node": "^18.7.1",
    "esbuild": "^0.15.0",
    "html-minifier": "^4.0.0",
    "terser": "^5.14.2",
    "ts-node": "^10.9.1",
    "ts-morph": "^16.0.0",
    "@swc/core": "^1.3.10"
  }
}
