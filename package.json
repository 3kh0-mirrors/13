{
  "name": "@eliasku/js13k-2022",
  "version": "1.0.0",
  "description": "js13k test game with p2p realtime multiplayer",
  "type": "module",
  "scripts": {
    "start": "node ./public/server.js",
    "start-watch": "npx nodemon ./public/server.js",
    "build": "node build.js",
    "build-dev": "node build.js --dev",
    "zip": "node build.js --zip",
    "client-watch": "esbuild src/lib/index.ts --watch --bundle --format=esm --sourcemap --outfile=public/index.js",
    "server-watch": "esbuild server/src/index.ts --watch --bundle --platform=node --target=node16 --format=esm --outfile=public/server.js"
  },
  "author": "eliasku",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^18.7.1",
    "esbuild": "^0.15.0",
    "html-minifier": "^4.0.0",
    "roadroller": "^2.1.0",
    "terser": "^5.14.2"
  }
}
